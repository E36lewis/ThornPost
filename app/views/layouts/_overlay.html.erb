<div data-behavior="overlay" class="overlay overlay-hugeinc">
  <button data-behavior="close-overlay" type="button" class="overlay-close"><span class="glyphicon glyphicon-remove"></span></button>
  <nav>
    <h2 class="grayed-heading center">Creating an account will also allow you to recive our Daily Digest!</h2>
      <ul class="omniauth-button-group">
	  <li>
        <%= link_to "Sign in or create your account", new_user_session_path, class: "signin-signup-link" %>
      </li>
      <li class="omniauth-button">
        <%= link_to user_facebook_omniauth_authorize_path, class: 'button facebook' do %>
          <%= icon('facebook-official') %>Sign in with Facebook
        <% end %>
      </li>

      <li class="omniauth-button google">
        <%= link_to user_google_oauth2_omniauth_authorize_path, class: 'button google' do %>
          <%= icon('google') %>Sign in with Google
        <% end %>
      </li>

      <li class="omniauth-button twitter">
        <%= link_to user_twitter_omniauth_authorize_path, class: 'button twitter' do %>
          <%= icon('twitter') %>Sign in with Twitter
        <% end %>
      </li>
    </ul>
  </nav>
</div>
